{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2020",           
    "module": "commonjs",         
    "moduleResolution": "node",
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,


    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "skipLibCheck": true
    
  },
  "include": ["src","src/generated"],
  "exclude": ["node_modules", "dist"]
}
